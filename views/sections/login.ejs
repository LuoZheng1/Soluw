<body>
<div class="container-lg">
	<div class="row">
		<div class="col-4"></div>

		<% if (!result) { %>
			<div class="col-6">
				<br />
				<br />
				<h3 class="">Iniciar Sesión</h3>
	
				<br />
				<form action="/auth" method="post">
					<div class="user-box">
						<input type="text" name="email" id="email" required/>
						<label>Correo Electronico</label>
					</div>
	
					<div class="user-box">
						<input type="password" name="contra" id="contra" required/>
						<label>Contraseña</label>
					</div>
	
					<div class="user-box">
						<input type="submit" class="btn" value="Iniciar Sesion" />
					</div>
				</form>
	
				<div class="user-box">
					<ul class="list-unstyled">
						<li class="nav-item <% if (pagina == 8) { %> active <% } %>">
							<a href="registrarse">Registrarse</a>
						</li>
						<li class="nav-item <% if (pagina == 7) { %> active <% } %>">
							<a href="politicas">Politicas</a>
						</li>
					</ul>
				</div>
			</div>
		<% } 
		else { %>
			<div class="col-6">
				<br />
				<br />
				<h3 class="">Opciones de Usuario</h3>
	
				<br />
				<div class="col-12 col-md-4 col-lg-3 mb-5 position-relative">
					<a class="product-item" href="/historial">
					<img src="../images/datospersonales2.jpg" class="img-fluid product-thumbnail">
					<strong class="producto-price">Historial de Ordenes</strong><br>
					<span class="icon-cross">
						<img src="../images/cross.svg" class="img-fluid">
					</span>
					</a>
				</div>

				<div class="col-12 col-md-4 col-lg-3 mb-5 position-relative">
					<a class="product-item" href="/logout">
					<img src="../images/cerrar.png" class="img-fluid product-thumbnail">
					<strong class="producto-price">Cerrar Sesion</strong><br>
					<span class="icon-cross">
						<img src="../images/cross.svg" class="img-fluid">
					</span>
					</a>
				</div>
	
				<div class="user-box">
					<ul class="list-unstyled">
						<li class="nav-item <% if (pagina == 8) { %> active <% } %>">
							<a href="registrarse">Registrarse</a>
						</li>
						<li class="nav-item <% if (pagina == 7) { %> active <% } %>">
							<a href="politicas">Politicas</a>
						</li>
					</ul>
				</div>
			</div>
		<% }%>

		<div class="col-2"></div>
	</div>
</div>
</body>