<% let total=0; %> 
<% if (results) { %>
	<div class="untree_co-section before-footer-section">
		<div class="container">
			<div class="row mb-5">
			<form class="col-md-12" method="post">
				<div class="site-blocks-table">
				<table class="table">
					<thead>
					<tr>
						<th class="product-name">Producto</th>
						<th class="product-price">Precio</th>
						<th class="product-total">Tecnico</th>
						<th class="product-remove">Fecha</th>
                        <th class="product-total">Estado de Orden</th>
					</tr>
					</thead>
					<tbody>
					<% results.forEach((car) => { %>
						<% total = total+car.precioServicio %> 
						<tr>
							<td class="product-name"><%= car.nombreServicio %></td>
							<td>$<%= car.precioServicio %></td>
							<td><%= car.nombreTecnico %></td>
							<td><%= car.fechaAccion %></td>
                            <td><%= car.estadoOrden %></td>
						</tr>
					<% }) %>
					</tbody>
				</table>
				</div>
			</form>
			</div>
		
			<div class="row">
                <div class="col-md-6">
                    <div class="row mb-5">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <a href="/historial" class="btn btn-black btn-sm btn-block">Actualizar Historial</a>
                        </div>
                        <div class="col-md-6">
                            <a href="/Servicios" class="btn btn-outline-black btn-sm btn-block">Contiuar Comprando</a>
                        </div>
                    </div>
        
                </div>
			</div>
		</div>
		</div>
<% } %>

