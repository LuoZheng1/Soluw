	<body>

		<!-- End Header/Navigation -->

		<!-- Start Hero Section -->
			<div class="hero">
				<div class="container">
					<div class="row justify-content-between">
						<div id="carouselExampleCaptions" class="carousel slide col-12" data-bs-ride="false">
							<div class="carousel-indicators">
							  <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
							  <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
							  <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
							</div>
							<div class="carousel-inner">
							  	<div class="carousel-item active">
									<img src="images/Banner-SOLUW.png" class="img-fluid">
									<div class="carousel-caption d-none d-md-block">
									<div class="intro-excerpt">
										<h1 class="text-white">Soluciones <span clsas="d-block">a tus problemas</span></h1>
										<h6><p class="mb-4 text-white">Aquí encontrarás servicios con técnicos profesionales para solucionar todos los problemas en tu casa.</p></h6>
										<ul class="list-unstyled">
											<li class="<% if (pagina == 2) { %> active <% } %>">
												<a class="btn btncolor" href="Servicios">Servicios</a>
											</li>
										</ul>
									</div>	
								</div>
							  </div>

							  <div class="carousel-item">
								<img src="images/Banner-tecnicos.png" class="img-fluid" alt="...">
								<div class="carousel-caption d-none d-md-block">
									<div class="intro-excerpt">
										<h1 class="text-white">Soluciones <span clsas="d-block">a tus problemas</span></h1>
										<p class="mb-4 text-white">Mira nuestra lista de técnicos para conocer sobre los servicios que ofrecemos.</p>
										<ul class="list-unstyled">
											<li class="<% if (pagina == 3) { %> active <% } %>">
												<a class="btn btncolor" href="destinos">Lista de Técnios</a>
											</li>
										</ul>
									</div>								
								</div>
							  </div>

							  <div class="carousel-item">
								<img src="images/Banner-Unete-a-Nosotros-SOLUW.jpg" class="img-fluid" alt="...">
								<div class="carousel-caption d-none d-md-block">
									<div class="intro-excerpt">										
									</div>						
								</div>
							  </div>
							</div>
							<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
							  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
							  <span class="visually-hidden">Previous</span>
							</button>
							<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
							  <span class="carousel-control-next-icon" aria-hidden="true"></span>
							  <span class="visually-hidden">Next</span>
							</button>
						  </div>
					</div>					
				</div>
			</div>
		<!-- End Hero Section -->

		<!-- Start Product Section -->
		<div class="product-section">
			<div class="container">
				<div class="row">
					
					<!-- Start Column 1 -->
					<div class="col-md-12 col-lg-3 mb-5 mb-lg-0">
						<h2 class="mb-4 section-title">Servicios más solicitados</h2>
						<p class="mb-4">Mira la gama de servicios que ofrecemos, esperamos que encuentres los que necesites solucionar.</p>
						<ul class="navbar-nav ml-auto">
							<li class="nav-item <% if (pagina == 2) { %> active <% } %> ">
							  <a class="btn btncolor" href="Servicios">Servicios</a>
						</li>
					</div> 
					<!-- End Column 1 -->

					<% results.forEach((servicio)=>{ %>
						<!-- Start Column 2 -->
						<div class="col-12 col-md-4 col-lg-3 mb-5 mb-md-0">
							<a class="product-item" href="/formularioServicio/<%= servicio.idServicoTecnico %>">
								<img src="images/<%= servicio.imagen%>" class="img-fluid product-thumbnail">
								<h3 class="product-title"><%= servicio.nombreServicio %></h3>
								<strong class="product-price">$<%= servicio.precioServicio %></strong>
								<span class="icon-cross">
									<img src="images/cross.svg" class="img-fluid">
								</span>
							</a>
						</div> 
						<!-- End Column 2 -->
					<% }) %>

				</div>
			</div>
		</div>
		<!-- End Product Section -->

		<!-- Start Why Choose Us Section -->
		<div class="product-section">
			<div class="container">
				<div class="row justify-content-between">
					<div class="col-lg-6">
						<h2 class="section-title">Top de Técnicos Certificados</h2>
						<p>Estos son los técnicos más destacados en sus trabajo este mes. ¡Fíjate si alguno ofrece lo que necesitas!</p>

						<div class="row my-5">
							<!--Columna de Tecnicos Top-->
							<% tecnico.forEach((tec)=>{ %> 
								<div class="col-12 col-md-4">
									<a class="product-item" href="/perfil-tecnico/<%= tec.idUsuario %>">
										<img src="images/<%= tec.foto%>" class="img-fluid product-thumbnail">
										<h3 class="product-title"><%=tec.nombre%> <%=tec.apellido%></h3>
										<strong class="product-price">Valoracion: <%=tec.valoracion%></strong>
			
										<span class="icon-cross">
											<img src="images/cross.svg" class="img-fluid">
										</span>
									</a>
								</div> 
							<!-- Fin de Columna de Tecnicos Top-->
							<% }) %>
						</div>
					</div>

					<div class="col-lg-5">
						<div class="img-wrap">
							<img src="images/handy2.jpg" alt="Image" class="img-fluid">
						</div>
					</div>

				</div>
			</div>
		</div>
		<!-- End Why Choose Us Section -->

		<!-- Start Blog Section -->
